<a href="/user/profile">
	<div class="profile-container">
		<img class="user-icon-profile" src="/img/profile_male.png">
	</div>
</a>
<style>
	.profile-container {
		z-index: 10;
		position: fixed;
		top: 5px;
		right: 5px;
	}

	.user-icon-profile {
		box-shadow: 0px 0px 10px inset rgb(0,140,255);
		border-radius: 5px;
		width: 47px;
		height: 47px;
		object-fit: cover;
	}
	
</style>
<script>
	var ProfileContainer = document.querySelector('.profile-container')
	
	fetch('/user/profile/api?cookie='+encodeURIComponent(document.cookie)).then((UserRaw) => {
		UserRaw.json().then(user => {
			if (!user.error) {
				if (user.user.gender == 'female') {
					ProfileContainer.innerHTML = `<img class="user-icon-profile" src="/img/profile_female.png">`
				}
			}
		})
	})

</script>